{
  "workflow": {
    "name": "WKF-001",
    "title": "Indicent Process",
    "description": "This is the process for managing incident submitted by employees",
    "activities": [
      {
        "name": "start",
        "type": "START"
      },
      {
        "name": "submit",
        "title": "Employee submit the form",
        "type": "USER",
        "form": "FRM-001",
        "role": "employee"
      },
      {
        "name": "evaluate",
        "title": "HR review and approves the form",
        "type": "USER",
        "form": "FRM-001",
        "role": "hr"
      },
      {
        "name": "payment",
        "title": "Finance initiate the reimbursement",
        "type": "USER",
        "form": "FRM-001",
        "role": "finance"
      },
      {
        "name": "end",
        "type": "END"
      }
    ],
    "flows": [
      {
        "from": "start",
        "to": "submit"
      },
      {
        "from": "submit",
        "to": "evaluate"
      },
      {
        "from": "evaluate",
        "to": "payment",
        "expression": "hr_approval=='approved'"
      },
      {
        "from": "evaluate",
        "to": "stop",
        "expression": "hr_approval=='rejected'"
      },
      {
        "from": "payment",
        "to": "stop"
      }
    ]
  }
}
