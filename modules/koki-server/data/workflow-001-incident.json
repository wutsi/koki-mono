{
  "workflow": {
    "name": "WKF-001",
    "title": "Indicent Process",
    "description": "This is the process for managing incident submitted by employees",
    "activities": [
      {
        "name": "start",
        "type": "START"
      },
      {
        "name": "submit",
        "title": "Employee submit the form",
        "type": "USER",
        "form": "FRM-001",
        "role": "employee"
      },
      {
        "name": "generate_id",
        "title": "Generate Case identifier",
        "type": "SCRIPT",
        "script": "SCR-001",
        "input": {
          "type": "{{incident_type}}"
        },
        "output": {
          "id": "case_id"
        }
      },
      {
        "name": "evaluate",
        "title": "HR review and approves the form",
        "type": "USER",
        "form": "FRM-001",
        "role": "hr"
      },
      {
        "name": "send_approved",
        "title": "Send message to employee when claims is approved",
        "type": "SEND",
        "message": "MSG-001",
        "role": "employee"
      },
      {
        "name": "send_rejected",
        "title": "Send message to employee when claims is rejected",
        "type": "SEND",
        "message": "MSG-002",
        "role": "employee"
      },
      {
        "name": "payment",
        "title": "Finance initiate the reimbursement",
        "type": "USER",
        "form": "FRM-001",
        "role": "finance"
      },
      {
        "name": "end",
        "type": "END"
      }
    ],
    "flows": [
      {
        "from": "start",
        "to": "submit"
      },
      {
        "from": "submit",
        "to": "generate_id"
      },
      {
        "from": "generate_id",
        "to": "evaluate"
      },
      {
        "from": "evaluate",
        "to": "send_approved",
        "expression": "hr_approval=='approved'"
      },
      {
        "from": "send_approved",
        "to": "payment"
      },
      {
        "from": "payment",
        "to": "end"
      },
      {
        "from": "evaluate",
        "to": "send_rejected",
        "expression": "hr_approval=='rejected'"
      },
      {
        "from": "send_rejected",
        "to": "end"
      }
    ]
  }
}
