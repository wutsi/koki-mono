{
  "content": {
    "title": "User Registration Form",
    "description": "This form is used for registering new users",
    "elements": [
      {
        "name": "general_information",
        "type": "SECTION",
        "title": "General Information",
        "elements": [
          {
            "name": "intro_video",
            "type": "VIDEO",
            "url": "https://www.youtube.com/watch?v=gBIcnU7bwNw"
          },
          {
            "name": "first_name",
            "type": "TEXT",
            "title": "First Name",
            "required": true,
            "maxLength": 50
          },
          {
            "name": "last_name",
            "type": "TEXT",
            "title": "Last Name",
            "required": true,
            "maxLength": 50
          },
          {
            "name": "sex",
            "type": "CHECKBOXES",
            "title": "Sex",
            "options": [
              {
                "value": "M",
                "text": "Male"
              },
              {
                "value": "F",
                "text": "Female"
              }
            ]
          }
        ]
      },
      {
        "name": "contact_information",
        "type": "SECTION",
        "title": "Contact information",
        "description": "Enter information to help us to contact you",
        "elements": [
          {
            "name": "email",
            "type": "EMAIL",
            "title": "Email",
            "required": true,
            "maxLength": 100
          },
          {
            "name": "phone_number",
            "type": "TEXT",
            "title": "Phone Number",
            "maxLength": 20
          },
          {
            "name": "mobile_number",
            "type": "TEXT",
            "title": "Mobile Number",
            "maxLength": 20
          },
          {
            "name": "address_street_1",
            "type": "TEXT",
            "title": "Address",
            "description": "Address Line 1",
            "required": true,
            "maxLength": 100
          },
          {
            "name": "address_street_2",
            "type": "TEXT",
            "description": "Address Line 2",
            "maxLength": 100
          },
          {
            "name": "address_city",
            "type": "TEXT",
            "description": "City",
            "maxLength": 100
          },
          {
            "name": "address_country",
            "type": "DROPDOWN",
            "description": "City",
            "options": [
              {
                "value": "BF",
                "text": "Burkina Faso"
              },
              {
                "value": "CM",
                "text": "Cameroon"
              },
              {
                "value": "SN",
                "text": "Senegal"
              }
            ]
          }
        ]
      }
    ]
  }
}
